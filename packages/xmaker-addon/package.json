{
  "name": "@fremux/storybook-xmaker",
  "version": "0.1.0",
  "description": "Addon para criação visual de componentes FremUX utilizando o padrão Matrioska",
  "license": "MIT",
  "homepage": "https://github.com/SysDevUtils/XStoryBook/tree/main/packages/xmaker-addon",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SysDevUtils/XStoryBook.git",
    "directory": "packages/xmaker-addon"
  },
  "bugs": {
    "url": "https://github.com/SysDevUtils/XStoryBook/issues"
  },
  "keywords": [
    "storybook",
    "nuxt",
    "fremux",
    "xmaker",
    "component-builder",
    "visual-editor",
    "xstorybook"
  ],
  "author": {
    "name": "FremUX",
    "email": "contact@fremux.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.mjs",
      "require": "./dist/register.cjs"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "import": "./dist/preset.mjs",
      "require": "./dist/preset.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.mjs",
    "*.cjs",
    "*.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "test": "vitest run",
    "prepack": "unbuild"
  },
  "peerDependencies": {
    "@storybook/vue3": "^9.0.9",
    "storybook": "^9.0.9",
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@storybook/components": "^9.0.9",
    "@storybook/core-events": "^9.0.9",
    "@storybook/manager-api": "^9.0.9",
    "@storybook/theming": "^9.0.9",
    "@storybook/types": "^9.0.9",
    "@fremux/storybook-vue-nuxt": "workspace:*",
    "json-schema-to-typescript": "^13.1.1",
    "lodash-es": "^4.17.21",
    "vue-dnd-kit": "^0.2.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5.0.4",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.1.3",
    "vue": "^3.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "entries": [
      "./src/index.ts",
      "./src/register.ts",
      "./src/preset.ts"
    ],
    "platform": "neutral"
  }
}
